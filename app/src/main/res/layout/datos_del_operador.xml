<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.example.fede.recmascad.DatosDelOperador_activity"
    android:orientation="vertical"
    android:weightSum="1">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos del Operador"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:textSize="30sp"
        android:textColor="#212121" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:text="Unidad"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textColor="#212121"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:textColor="#727272" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:text="Operador"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textColor="#212121" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_gravity="center_horizontal"
        android:textColor="#727272" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:text="Responsable a cargo"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="#212121" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_gravity="center_horizontal"
        android:textColor="#727272" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:text="Mail responsable a cargo"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:textColor="#212121" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:textColor="#727272" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:text="Telefono del responsable a cargo"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:textColor="#212121" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText5"
        android:textColor="#727272" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Atras"
            android:background="@color/accent"/>

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_weight="1"
            android:id="@+id/btn_siguiente"
            android:background="@color/accent"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

</LinearLayout>
